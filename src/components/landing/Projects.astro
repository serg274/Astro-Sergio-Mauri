---
import { projects } from "../../config/projects.json";
---

<h2 class="text-5xl font-bold my-8 text-center">Projects</h2>

{
  projects.map((projects) => (
    <div class="flex flex-col mb-2 text-center mx-3 md:text-left md:flex-row ">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4">{projects.title}</h2>
        <p class="my-2">{projects.description}</p>
        <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-700 rounded-lg">
          More Info
          </button>
      </div>
      <div class="flex-1">
        <img class="w-72 m-auto" src={projects.img} />
      </div>
    </div>
  ))
}

